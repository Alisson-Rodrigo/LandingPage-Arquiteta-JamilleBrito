<script>
 document.addEventListener("DOMContentLoaded", function () {
    const buttons = document.querySelectorAll(".options-projects nav ul li button");
    const images = document.querySelectorAll(".grid-images .image-container");

    // Função para atualizar a exibição das imagens
    function updateImages(category) {
        images.forEach((img) => {
            if (category === "all") {
                // Se for "All", mostrar apenas as 6 imagens marcadas com data-all="true"
                img.style.display = img.dataset.all === "true" ? "block" : "none";
            } else {
                // Se for uma categoria, mostrar todas as 6 imagens dessa categoria
                img.style.display = img.dataset.category === category ? "block" : "none";
            }
        });
    }

    // Adiciona evento de clique a cada botão de categoria
    buttons.forEach((button) => {
        button.addEventListener("click", function () {
            // Remove a classe "active" do botão anterior e adiciona ao botão atual
            document.querySelector(".options-projects nav ul li button.active")?.classList.remove("active");
            this.classList.add("active");

            // Obtém a categoria correspondente ao botão clicado
            const category = this.textContent.toLowerCase();

            // Atualiza as imagens
            updateImages(category);
        });
    });

    // Inicializa a página mostrando exatamente 6 imagens no "All"
    updateImages("all");
});



</script>